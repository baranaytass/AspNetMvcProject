@model MvcStok.Models.Entity.TBLURUNLER

@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div style="margin-bottom:15px">
        <label>Ürün Adı</label>
        <input style="width:300px" type="Text" class="form-control" name="URUNAD" required="" maxlength="50"/>
    </div>
    <div style="margin-bottom:15px">
        <label>Marka </label>
        <input style="width:300px" type="Text" class="form-control" name="MARKA" required=""/>
    </div>
    <div style="margin-bottom:15px">
        <label>Kategori No</label>
        <div style="width:300px">@Html.DropDownListFor(m => m.TBLKATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })</div>
    </div>
    <div style="margin-bottom:15px">
        <label>Fiyat</label>
        <input style="width:300px" type="Text" class="form-control" name="FIYAT" required=""/>
    </div>
    <div>
        <label>Stok Sayısı</label>
        <input style="width:300px" type="Text" class="form-control" name="STOK" required=""/>
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info"> Ürün Ekle</button>
    </div>
</form>


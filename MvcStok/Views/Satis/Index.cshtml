@model MvcStok.Models.Entity.TBLSATISLAR

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Satış Yap</button>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Satış Ekranı</h2>
            </div>
            <form method="post" action="/Satis/YeniSatis">
                <div class="modal-body">
                    <label>Ürün Id</label>
                    @Html.TextBoxFor(m => m.URUN, new { @class = "form-control", @style = "margin-bottom:15px" })

                    <label>Müşteri Id</label>
                    @Html.TextBoxFor(m => m.MUSTERI, new { @class = "form-control", @style = "margin-bottom:15px" })

                    <label>Adet</label>
                    @Html.TextBoxFor(m => m.ADET, new { @class = "form-control", @style = "margin-bottom:15px" })

                    <label>Fiyat</label>
                    @Html.TextBoxFor(m => m.FIYAT, new { @class = "form-control", @style = "margin-bottom:24px" })
                    <button type="submit" class="btn btn-info">Satış Kaydet</button>
                    <button type="reset" class="btn btn-warning" data-dismiss="modal">Vazgeç</button>

                </div>
            </form>
        </div>
    </div>

</div>
